{
  "name": "negus-ethiopic-gregorian",
  "version": "0.2.4",
  "description": "Accurate, dependency-free Ethiopic (Ethiopian) â†” Gregorian date conversions with utilities & highlights.",
  "license": "MIT",
  "author": "Negus Nati",
  "repository": {
    "type": "git",
    "url": "https://github.com/negusnati/negus-ethiopic-gregorian.git"
  },
  "bugs": {
    "url": "https://github.com/negusnati/negus-ethiopic-gregorian/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./highlights": {
      "types": "./dist/highlights.d.ts",
      "import": "./dist/highlights.js"
    }
  },
  "typesVersions": {
    "*": {
      "highlights": ["dist/highlights.d.ts"]
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "tsup --clean && npx esbuild src/index.ts --bundle --format=cjs --target=es2021 --minify --platform=node --outfile=dist/index.cjs",
    "dev": "tsup --watch",
    "test": "vitest run",
    "lint": "eslint . --ext .ts",
    "prepublishOnly": "npm run build && npm run test && npm run lint"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.36.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^2.1.9"
  }
}
